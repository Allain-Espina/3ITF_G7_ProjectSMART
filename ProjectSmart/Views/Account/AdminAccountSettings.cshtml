@model IEnumerable<ProjectSmart.Models.AdminUsers>;

<h1 id="titles" class="d-flex justify-content-start mt-2 pt-2 ms-5 ps-5">Administrator's Details</h1>

<br />

<table class="table table-hover table-sm">
    <tr>
        <th>First Name</th>
        <th>Middle Name</th>
        <th>Last Name</th>
    </tr>

@foreach (var aa in Model)
{
        <tr>
            <td>@aa.AdminFirstName</td>
            <td>@aa.AdminMiddleName</td>
            <td>@aa.AdminLastName</td>
            <td>
                <a style="color: white;" class="btn btn-primary" asp-action="AdminViewDetails" asp-route-id="@aa.AdminId">View Full Details</a>
            </td>
            <td>
                <a style="color: white;" class="btn btn-primary" asp-action="AdminUpdateDetails" asp-route-id="@aa.AdminId">Update Administrator Details</a>
            </td>
            <td>
                <a style="color: white;" class="btn btn-primary" asp-action="AdminUpdatePassword" asp-route-id="@aa.AdminId">Update Account Password</a>
            </td>
        </tr>
}
</table>


