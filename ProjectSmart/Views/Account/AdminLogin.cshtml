@{
}

@model AdminLoginModel

<h1>Administrator's Login</h1>

<div class="btn-danger" asp-validation-summary="All"></div>

<form asp-action="AdminLogin" asp-controller="Account">
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email">
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password">
    </div>
    <br />
    <input type="submit" class="btn btn-primary" value="Submit">
</form>
<br />
<p>Don't have an account yet? <a asp-action="AdminRegister" asp-controller="Account">Click here to sign up.</a></p>
