@{
}

@model ChangePWModel;

<h1>Update your Account Password</h1>

<div class="btn-danger" asp-validation-summary="All"></div>

<form asp-action="AdminUpdatePassword" asp-controller="Account">
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email">
    </div>
    <br />
    <div class="form-group">
        <label asp-for="CurrentPassword"></label>
        <input asp-for="CurrentPassword">
    </div>
    <br />
    <div class="form-group">
        <label asp-for="NewPassword"></label>
        <input asp-for="NewPassword">
    </div>
    <br />
    <div class="form-group">
        <label asp-for="ConfirmNewPassword"></label>
        <input asp-for="ConfirmNewPassword">
    </div>
    <br />
    <input type="submit" class="btn btn-primary" value="Submit">
    <button type="button" onclick="history.back()" class="btn btn-secondary">Cancel</button>
</form>