@model IEnumerable<ProjectSmart.Models.ScholarUsers>;

<h1 id="titles" class="d-flex justify-content-start mt-2 pt-2 ms-5 ps-5">Scholar's Details</h1>

<br />

<table class="table table-hover table-sm">
    <tr>
        <th>First Name</th>
        <th>Middle Name</th>
        <th>Last Name</th>
    </tr>

@foreach (var sa in Model)
{
        <tr>
            <td>@sa.ScholarFirstName</td>
            <td>@sa.ScholarMiddleName</td>
            <td>@sa.ScholarLastName</td>
            <td>
                <a style="color: white;" class="btn btn-primary" asp-action="ScholarViewDetails" asp-route-id="@sa.ScholarId">View Full Details</a>
            </td>
            <td>
                <a style="color: white;" class="btn btn-primary" asp-action="ScholarUpdateDetails" asp-route-id="@sa.ScholarId">Update Scholar Details</a>
            </td>
            <td>
                <a style="color: white;" class="btn btn-primary" asp-action="ScholarUpdatePassword" asp-route-id="@sa.ScholarId">Update Account Password</a>
            </td>
        </tr>
}
</table>

