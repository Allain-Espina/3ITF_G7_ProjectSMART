@{
}

@model ScholarRegisterModel

<h1>Register a new Scholar's Account</h1>

<div class="btn-danger" asp-validation-summary="All"></div>

<form asp-action="ScholarRegister" asp-controller="Account" method="post">
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email">
    </div>
    <br />
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName">
    </div>
    <br />
    <div class="form-group">
        <label asp-for="MiddleName"></label>
        <input asp-for="MiddleName">
    </div>
    <br />
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName">
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password">
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Phone"></label>
        <input asp-for="Phone">
    </div>
    <br />
    <div class="form-group">
        <label asp-for="DateOfBirth"></label>
        <input asp-for="DateOfBirth">
    </div>
    <br />
    <div class="form-group">
        <label asp-for="University"></label>
        <input asp-for="University">
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Address1"></label>
        <input asp-for="Address1">
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Address2"></label>
        <input asp-for="Address2">
    </div>
    <br />
    <div class="form-group">
        <label asp-for="City"></label>
        <input asp-for="City">
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Region"></label>
        <input asp-for="Region">
    </div>
    <br />
    <input type="submit" class="btn btn-primary" value="Submit">
</form>
<br />
<p>Already have an account? <a asp-action="ScholarLogin" asp-controller="Account">Click here to log in.</a></p>