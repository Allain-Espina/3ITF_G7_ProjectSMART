@{
}
@model IEnumerable<ProjectSmart.Models.AdminUsers>;

<h1 id="titles" class="d-flex justify-content-start mt-2 pt-2 ms-5 ps-5">Administrator Accounts</h1>

<hr>

<a class="btn btn-success" asp-controller="Admin" asp-action="AdminRegister">Create New Administrator Account</a>

<hr />

<br />

<table class="table table-hover table-sm">
    <tr>
        <th>Email Address</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Contact Number</th>
        <th>Date of Birth</th>
        <th>Branch</th>
        <th></th>
    </tr>

    @foreach (var au in Model)
    {
        <tr>
            <td>@au.AdminEmail</td>
            <td>@au.AdminFirstName</td>
            <td>@au.AdminLastName</td>
            <td>@au.AdminContactNumber</td>
            <td>@au.AdminDateOfBirth</td>
            <td>@au.AdminBranch</td>
            <td><a style="color: white;" class="btn btn-info" asp-action="ViewAdminDetails" asp-route-id="@au.AdminId">Preview</a></td>
            <td><a style="color: white;" class="btn btn-primary" asp-action="UpdateAdminDetails" asp-route-id="@au.AdminId">Update</a></td>
            <td><a style="color: white;" class="btn btn-danger" asp-action="AdminDeactivate" asp-route-id="@au.AdminId">Deactivate</a></td>
        </tr>
    }
</table>

