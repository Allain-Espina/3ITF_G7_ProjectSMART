@{
}
@model IEnumerable<ProjectSmart.Models.AdminUsers>;

<h1 id="titles" class="d-flex justify-content-start mt-2 pt-2 ms-5 ps-5">Inactive Administrators</h1>

<br />

<table class="table table-hover table-sm">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Branch</th>
        <th>View</th>
        <th>Reactivate</th>
    </tr>

    @foreach (var au in Model)
    {
        <tr>
            <td>@au.AdminFirstName</td>
            <td>@au.AdminLastName</td>
            <td>@au.AdminBranch</td>
            <td><a style="color: white;" class="btn btn-info" asp-action="ViewAdminDetails" asp-route-id="@au.AdminId">Preview</a></td>
            <td><a style="color: white;" class="btn btn-success" asp-action="AdminReactivate" asp-route-id="@au.AdminId">Reactivate</a></td>
        </tr>
    }
</table>