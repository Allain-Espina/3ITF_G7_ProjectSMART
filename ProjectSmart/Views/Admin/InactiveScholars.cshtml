@{
}
@model IEnumerable<ProjectSmart.Models.ScholarUsers>;

<h1 id="titles" class="d-flex justify-content-start mt-2 pt-2 ms-5 ps-5">Inactive Scholars</h1>

<br />

<table class="table table-hover table-sm">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>University</th>
        <th>View</th>
        <th>Reactivate</th>
    </tr>

    @foreach (var su in Model)
    {
        <tr>
            <td>@su.ScholarFirstName</td>
            <td>@su.ScholarLastName</td>
            <td>@su.ScholarUniversity</td>
            <td><a style="color: white;" class="btn btn-info" asp-action="ViewScholarDetails" asp-route-id="@su.ScholarId">Preview</a></td>
            <td><a style="color: white;" class="btn btn-success" asp-action="ScholarReactivate" asp-route-id="@su.ScholarId">Reactivate</a></td>
        </tr>
    }
</table>