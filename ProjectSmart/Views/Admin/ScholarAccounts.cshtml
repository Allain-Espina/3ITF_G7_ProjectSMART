@{
}
@model IEnumerable<ProjectSmart.Models.ScholarUsers>;

<h1 id="titles" class="d-flex justify-content-start mt-2 pt-2 ms-5 ps-5">Scholar Accounts</h1>

<hr>

<a class="btn btn-success" asp-controller="Admin" asp-action="ScholarRegister">Create New Scholar Account</a>

<hr />

<br />

<table class="table table-hover table-sm">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>University</th>
        <th>View</th>
        <th>Update</th>
        <th>Deactivate</th>
    </tr>

    @foreach (var su in Model)
    {
        <tr>
            <td>@su.ScholarFirstName</td>
            <td>@su.ScholarLastName</td>
            <td>@su.ScholarUniversity</td>
            <td><a style="color: white;" class="btn btn-info" asp-action="ViewScholarDetails" asp-route-id="@su.ScholarId">Preview</a></td>
            <td><a style="color: white;" class="btn btn-primary" asp-action="UpdateScholarDetails" asp-route-id="@su.ScholarId">Update</a></td>
            <td><a style="color: white;" class="btn btn-danger" asp-action="ScholarDeactivate"  asp-route-id="@su.ScholarId">Deactivate</a></td>
        </tr>
    }
</table>

