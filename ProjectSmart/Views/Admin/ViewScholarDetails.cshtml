@model ScholarUsers;

<h1>Scholar's Details</h1>

<table class="table table-hover">
    <tr>
        <th hidden>Id:</th>
        <td hidden>@Model.ScholarId</td>
    </tr>
    <tr>
        <th>Email Address:</th>
        <td>@Model.ScholarEmail</td>
    </tr>
    <tr>
    <tr>
        <th>Role:</th>
        <td>@Model.ScholarRole</td>
    </tr>
    <tr>
    <tr>
        <th>First Name:</th>
        <td>@Model.ScholarFirstName</td>
    </tr>
    <tr>
        <th>Middle Name:</th>
        <td>@Model.ScholarMiddleName</td>
    </tr>
    <tr>
        <th>Last Name:</th>
        <td>@Model.ScholarLastName</td>
    </tr>
    <tr>
        <th>Contact Number:</th>
        <td>@Model.ScholarContactNumber</td>
    </tr>
    <tr>
        <th>Date of Birth:</th>
        <td>@Model.ScholarDateOfBirth</td>
    </tr>
    <tr>
        <th>University:</th>
        <td>@Model.ScholarUniversity</td>
    </tr>
    <tr>
        <th>Date of Birth:</th>
        <td>@Model.ScholarDateOfBirth</td>
    </tr>
    <tr>
        <th>Address Line 1:</th>
        <td>@Model.ScholarAddress1</td>
    </tr>
    <tr>
        <th>Address Line 2:</th>
        <td>@Model.ScholarAddress2</td>
    </tr>
    <tr>
        <th>City of Residence:</th>
        <td>@Model.ScholarCity</td>
    </tr>
    <tr>
        <th>Region:</th>
        <td>@Model.ScholarRegion</td>
    </tr>
    
</table>

<button type="button" onclick="history.back()" class="btn btn-secondary">Return</button>
