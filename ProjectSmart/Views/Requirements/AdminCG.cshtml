@{
}
@model IEnumerable<ProjectSmart.Models.Certified_Grades>;

<h1 id="titles" class="d-flex justify-content-start mt-2 pt-2 ms-5 ps-5">Scholars' Certified True Copy of Grades</h1>

<br />

<table class="table table-hover table-sm">
    <tr>
        <th>Scholar</th>
        <th>Term</th>
        <th>Academic Year</th>
        <th>Status</th>
        <th>Date of Upload</th>
        <th>Check</th>
        <th>Preview</th>
    </tr>

    @foreach (var cg in Model)
    {
        <tr>
            <td>@cg.ScholarEmailAddress</td>
            <td>@cg.CG_Term</td>
            <td>@cg.CG_AcademicYear</td>
            <td>@cg.CG_Status</td>
            <td>@cg.CG_DateUploaded</td>
            <td><a style="color: white;" class="btn btn-success" asp-action="AdminUpdateCGStatus" asp-route-id="@cg.CG_ID">Update</a></td>
            <td><a style="color: white;" class="btn btn-info" asp-action="AdminCheckCG" asp-route-id="@cg.CG_ID">Check</a></td>
            <td><a style="color: white;" class="btn btn-primary" href="/@cg.CG_FilePath" target="_blank">Preview</a></td>
        </tr>
    }
</table>

