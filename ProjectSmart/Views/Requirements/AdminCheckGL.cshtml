@model Gratitude_Letter;

<h1>Scholar's Gratitude Letter</h1>

<table class="table table-hover">
    <tr>
        <th>Email Address:</th>
        <td>@Model.ScholarEmailAddress</td>
    </tr>
    <tr>
        <th>Term:</th>
        <td>@Model.GL_Term</td>
    </tr>
    <tr>
        <th>Academic Year:</th>
        <td>@Model.GL_AcademicYear</td>
    </tr>
    <tr>
        <th>File Name:</th>
        <td>@Model.GL_FileName</td>
    </tr>
    <tr>
        <th>File Path:</th>
        <td>@Model.GL_FilePath</td>
    </tr>
    <tr>
        <th>Date Uploaded:</th>
        <td>@Model.GL_DateUploaded</td>
    </tr>
    <tr>
        <th>Status:</th>
        <td>@Model.GL_Status</td>
    </tr>
</table>

<a style="color: white;" class="btn btn-primary" asp-action="AdminCG">Return</a>
