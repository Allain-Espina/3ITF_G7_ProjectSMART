@{
}
@model IEnumerable<ProjectSmart.Models.Gratitude_Letter>;

<h1 id="titles" class="d-flex justify-content-start mt-2 pt-2 ms-5 ps-5">Scholars' Gratitude Letters</h1>

<br />

<table class="table table-hover table-sm">
    <tr>
        <th>Scholar</th>
        <th>Term</th>
        <th>Academic Year</th>
        <th>Status</th>
        <th>Check</th>
        <th>Update Status</th>
        <th>Preview</th>
    </tr>

    @foreach (var gl in Model)
    {
        <tr>
            <td>@gl.ScholarEmailAddress</td>
            <td>@gl.GL_Term</td>
            <td>@gl.GL_AcademicYear</td>
            <td>@gl.GL_Status</td>
            <td><a style="color: white;" class="btn btn-primary" asp-action="AdminCheckGL" asp-route-id="@gl.GL_ID">Check</a></td>
            <td><a style="color: white;" class="btn btn-primary" asp-action="AdminUpdateGLStatus" asp-route-id="@gl.GL_ID">Update Status</a></td>
            <td><a style="color: white;" class="btn btn-primary" href="/@gl.GL_FilePath" target="_blank">Preview</a></td>
        </tr>
    }
</table>

