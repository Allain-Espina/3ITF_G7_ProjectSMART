@{
}
@model IEnumerable<ProjectSmart.Models.Registration_Form>;

<h1 id="titles" class="d-flex justify-content-start mt-2 pt-2 ms-5 ps-5">Scholars' Registration Forms</h1>

<br />

<table class="table table-hover table-sm">
    <tr>
        <th>Scholar</th>
        <th>Term</th>
        <th>Academic Year</th>
        <th>Status</th>
        <th>Check</th>
        <th>Update Status</th>
        <th>Preview</th>
    </tr>

    @foreach (var rf in Model)
    {
        <tr>
            <td>@rf.ScholarEmailAddress</td>
            <td>@rf.RF_Term</td>
            <td>@rf.RF_AcademicYear</td>
            <td>@rf.RF_Status</td>
            <td><a style="color: white;" class="btn btn-primary" asp-action="AdminCheckRF" asp-route-id="@rf.RF_ID">Check</a></td>
            <td><a style="color: white;" class="btn btn-primary" asp-action="AdminUpdateRFStatus" asp-route-id="@rf.RF_ID">Update Status</a></td>
            <td><a style="color: white;" class="btn btn-primary" href="/@rf.RF_FilePath" target="_blank">Preview</a></td>
        </tr>
    }
</table>

