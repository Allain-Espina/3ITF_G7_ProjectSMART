@{
}
@model IEnumerable<ProjectSmart.Models.Terminal_Report>;

<h1 id="titles" class="d-flex justify-content-start mt-2 pt-2 ms-5 ps-5">Scholars' Certified Terminal Report Forms</h1>

<br />

<table class="table table-hover table-sm">
    <tr>
        <th>Scholar</th>
        <th>Term</th>
        <th>Academic Year</th>
        <th>Status</th>
        <th>Check</th>
        <th>Update Status</th>
        <th>Preview</th>
    </tr>

    @foreach (var tr in Model)
    {
        <tr>
            <td>@tr.ScholarEmailAddress</td>
            <td>@tr.TR_Term</td>
            <td>@tr.TR_AcademicYear</td>
            <td>@tr.TR_Status</td>
            <td><a style="color: white;" class="btn btn-primary" asp-action="AdminCheckTR" asp-route-id="@tr.TR_ID">Check</a></td>
            <td><a style="color: white;" class="btn btn-primary" asp-action="AdminUpdateTRStatus" asp-route-id="@tr.TR_ID">Update Status</a></td>
            <td><a style="color: white;" class="btn btn-primary" href="/@tr.TR_FilePath" target="_blank">Preview</a></td>
        </tr>
    }
</table>

