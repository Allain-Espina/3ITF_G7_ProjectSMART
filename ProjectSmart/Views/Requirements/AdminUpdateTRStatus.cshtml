@model Terminal_Report;
<form asp-controller="Requirements" asp-action="AdminUpdateTRStatus" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="TR_ID" hidden></label>
        <input class="form-control" asp-for="TR_ID" readonly hidden>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="ScholarEmailAddress" hidden></label>
        <input class="form-control" asp-for="ScholarEmailAddress" value="@User.Identity.Name" readonly hidden>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="TR_Status"></label>
        <select class="form-control" asp-for="TR_Status">
            <option>FOR REVIEW</option>
            <option>APPROVED</option>
            <option>DENIED</option>
        </select>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Submit</button>
    <button type="button" onclick="history.back()" class="btn btn-secondary">Cancel</button>
</form>
