@model IEnumerable<ProjectSmart.Models.Certified_Grades>;

<h1 id="titles" class="d-flex justify-content-start mt-2 pt-2 ms-5 ps-5">UPLOAD REQUIREMENTS: Certified True Copy of Grades</h1>

<hr>

<a class="btn btn-success" asp-action="UploadCG">Upload Certified True Copy of Grades</a>

<hr />

<br />

<table class="table table-hover table-sm">
    <tr>
        <th>Term</th>
        <th>Academic Year</th>
        <th>Status</th>
        <th>Date of Upload</th>
        <th>View</th>
        <th>Update</th>
    </tr>

    @foreach (var cg in Model)
    {
        <tr>
            <td>@cg.CG_Term</td>
            <td>@cg.CG_AcademicYear</td>
            <td>@cg.CG_Status</td>
            <td>@cg.CG_DateUploaded</td>
            <td><a style="color: white;" class="btn btn-primary" asp-action="ViewCG" asp-route-id="@cg.CG_ID">Preview</a></td>
            <td><a style="color: white;" class="btn btn-primary" asp-action="UpdateCG" asp-route-id="@cg.CG_ID">Update</a></td>
        </tr>
    }
</table>

