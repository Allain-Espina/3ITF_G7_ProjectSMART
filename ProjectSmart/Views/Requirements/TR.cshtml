@model IEnumerable<ProjectSmart.Models.Terminal_Report>;

<h1 id="titles" class="d-flex justify-content-start mt-2 pt-2 ms-5 ps-5">UPLOAD REQUIREMENTS: Scholar's Terminal Report Form</h1>

<hr>

<a class="btn btn-success" asp-action="UploadTR">Upload Scholar's Terminal Report Form</a>

<hr />

<br />

<table class="table table-hover table-sm">
    <tr>
        <th>Term</th>
        <th>Academic Year</th>
        <th>Status</th>
        <th>Date of Upload</th>
        <th>Actions</th>
    </tr>

    @foreach (var tr in Model)
    {
        <tr>
            <td>@tr.TR_Term</td>
            <td>@tr.TR_AcademicYear</td>
            <td>@tr.TR_Status</td>
            <td>@tr.TR_DateUploaded</td>
            <td><a style="color: white;" class="btn btn-primary" asp-action="ViewTR" asp-route-id="@tr.TR_ID">Preview</a></td>
            <td><a style="color: white;" class="btn btn-primary" asp-action="UpdateTR" asp-route-id="@tr.TR_ID">Update</a></td>
        </tr>
    }
</table>
