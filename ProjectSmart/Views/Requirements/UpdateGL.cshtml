@model Gratitude_Letter;

<h1>Update Gratitude Letter to the Foundation</h1>

<div class="btn-danger" asp-validation-summary="All"></div>

<form asp-controller="Requirements" asp-action="UpdateGL" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <input class="form-control" asp-for="GL_ID" hidden readonly>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="ScholarEmailAddress">Student Name</label>
        <input class="form-control" asp-for="ScholarEmailAddress" readonly>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="GL_Term"></label>
        <select class="form-control" asp-for="GL_Term" asp-items="@Html.GetEnumSelectList(typeof(Term))">
        </select>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="GL_AcademicYear">Academic Year</label>
        <input class="form-control" asp-for="GL_AcademicYear" readonly>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="GL_File"></label>
        <input asp-for="GL_File" class="form-control" accept="application/pdf" required>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Submit</button>
    <button type="button" onclick="history.back()" class="btn btn-secondary">Cancel</button>
</form>