@model Terminal_Report;

<h1>Update Terminal Report Form</h1>

<div class="btn-danger" asp-validation-summary="All"></div>

<form asp-controller="Requirements" asp-action="UpdateTR" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="ScholarEmailAddress">Student Name</label>
        <input class="form-control" asp-for="ScholarEmailAddress" readonly>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="TR_Term"></label>
        <select class="form-control" asp-for="TR_Term" asp-items="@Html.GetEnumSelectList(typeof(Term))">
        </select>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="TR_AcademicYear">Academic Year</label>
        <input class="form-control" asp-for="TR_AcademicYear" readonly>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="TR_File"></label>
        <input asp-for="TR_File" class="form-control">
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Submit</button>
    <button type="button" onclick="history.back()" class="btn btn-secondary">Cancel</button>
</form>