<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjectSmart</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjectSmart.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Amatic+SC">
    <link href="https://fonts.googleapis.com/css2?family=League+Spartan:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand ms-5 ps-5" asp-area="" asp-controller="Home" asp-action="Index">Project Smart</a>
                <button class="navbar-toggler me-5" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center justify-content-between">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 me-5 pe-5">

                        @if (User.IsInRole("Scholar"))
                        {
                            <li class="nav-item">
                                <a class="w3-bar-item w3-button" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>

                            <!-- Requirements Dropdown for Scholar-->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="requirementsDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Requirements
                                </a>
                                <div class="dropdown-menu" aria-labelledby="requirementsDropdown">
                                    <a class="dropdown-item" asp-area="" asp-controller="Requirements" asp-action="AdminCG">Certified True Copy of Grades</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Requirements" asp-action="AdminRF">Registration Form</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Requirements" asp-action="AdminTR">Certified Terminal Report Form</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Requirements" asp-action="AdminGL">Gratitude Letter</a>
                                </div>
                            </li>

                            <li class="nav-item">
                                <a class="w3-bar-item w3-button" asp-area="" asp-controller="Connect" asp-action="ViewConnect">Connect</a>
                            </li>
                            <li class="nav-item">
                                <a class="w3-bar-item w3-button" asp-area="" asp-controller="Scholarship" asp-action="Index">Scholarship</a>
                            </li>
                            <li class="nav-item">
                                <a class="w3-bar-item w3-button" asp-area="" asp-controller="About" asp-action="Index">About</a>
                            </li>
                          

                            <!-- Settings Dropdown for Scholar -->
                            <li class="nav-item">
                                <div class="dropdown ml-auto">
                                    <button class="btn btn-warning dropdown-toggle" type="button" id="ScholarSettingsDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                        SETTINGS
                                    </button>
                                    <div class="dropdown-menu dropdown-menu-end" aria-labelledby="ScholarSettingsDropdown">
                                        <a class="dropdown-item text-center" asp-area="" asp-controller="Settings" asp-action="ScholarUpdateAccount">Update Account</a>
                                        <a class="dropdown-item text-center" asp-area="" asp-controller="Settings" asp-action="ScholarUpdatePassword">Update Password</a>
                                        <hr class="dropdown-divider" />
                                        <a class="dropdown-item text-center" asp-action="Logout" asp-controller="Account">Logout</a>
                                    </div>
                                </div>
                            </li>
                        }


                        <!-- Admin specific code ... -->
                        @if (User.IsInRole("Admin"))
                        {
                            <ul class="navbar-nav ms-auto mb-2 mb-lg-0 me-5 pe-5 justify-content-center">
                                <!-- Home for Admin-->
                                <li class="nav-item">
                                    <a class="w3-bar-item w3-button" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                </li>

                                <!-- User Accounts Dropdown for Admin-->
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="userAccountsDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        User Accounts
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="userAccountsDropdown">
                                        <a class="dropdown-item" asp-area="" asp-controller="Admin" asp-action="ScholarAccounts">Scholar Accounts</a>
                                        <a class="dropdown-item" asp-area="" asp-controller="Admin" asp-action="InactiveScholars">Inactive Scholars</a>
                                        <a class="dropdown-item" asp-area="" asp-controller="Admin" asp-action="AdminAccounts">Admin Accounts</a>
                                        <a class="dropdown-item" asp-area="" asp-controller="Admin" asp-action="InactiveAdmins">Inactive Admins</a>
                                    </div>
                                </li>

                                <!-- Requirements Dropdown for Admin-->
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="requirementsDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Requirements
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="requirementsDropdown">
                                        <a class="dropdown-item" asp-area="" asp-controller="Requirements" asp-action="AdminCG">Certified True Copy of Grades</a>
                                        <a class="dropdown-item" asp-area="" asp-controller="Requirements" asp-action="AdminRF">Registration Form</a>
                                        <a class="dropdown-item" asp-area="" asp-controller="Requirements" asp-action="AdminTR">Certified Terminal Report Form</a>
                                        <a class="dropdown-item" asp-area="" asp-controller="Requirements" asp-action="AdminGL">Gratitude Letter</a>
                                    </div>
                                </li>

                                <!-- Settings Dropdown for Admin -->
                                <li class="nav-item">
                                    <div class="dropdown ml-auto">
                                        <button class="btn btn-warning dropdown-toggle" type="button" id="AdminSettingsDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                            SETTINGS
                                        </button>
                                        <div class="dropdown-menu dropdown-menu-end" aria-labelledby="AdminSettingsDropdown">
                                            <a class="dropdown-item text-center" asp-area="" asp-controller="Settings" asp-action="AdminUpdateAccount">Update Account</a>
                                            <a class="dropdown-item text-center" asp-area="" asp-controller="Settings" asp-action="AdminUpdatePassword">Update Password</a>
                                            <hr class="dropdown-divider" />
                                            <a class="dropdown-item text-center" asp-action="Logout" asp-controller="Account">Logout</a>
                                        </div>
                                    </div>
                                </li>

                            </ul>
                        }






                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li>
                                <div class="dropdown d-flex justify-content-center me-5 pe-5">
                                    <button class="btn btn-warning dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                        LOGIN
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                        <a class="dropdown-item text-center" asp-area="" asp-controller="Account" asp-action="ScholarLogin">Login as a Scholar</a>
                                        <a class="dropdown-item text-center" asp-area="" asp-controller="Account" asp-action="AdminLogin">Login as an Admin</a>
                                    </div>
                                </div>
                            </li>
                        }



                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top mb-2 pt-2 text-muted">
        <div class="container">
            &copy; 2023 - ProjectSmart - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
